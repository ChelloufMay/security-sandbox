# backend/.env.example
# Template of environment variables the application expects.
# ---------------------------

# Django secret key
SECRET_KEY='replace-with-a-secret'

# Debug: True for development, False for production
DEBUG=True

# Allowed hosts for Django
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL postgres
DATABASE_URL=postgres://postgres:password@host.docker.internal:5432/security_sandbox_db

# Mail / SMTP settings (MailHog example)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=security-sandbox@example.com

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme123

# Dev mode toggle for exposing dev-only UI
DEV_MODE=True

VAULT_ROOT_KEY=REPLACE_WITH_FERNET_KEY

