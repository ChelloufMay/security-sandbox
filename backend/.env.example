# backend/.env.example
# Template of environment variables the application expects.
# ---------------------------

# Django secret key (replace in your local .env)
SECRET_KEY=replace_this_with_a_secure_secret_key

# Debug: True for development, False for production
DEBUG=True

# Allowed hosts for Django
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL (sqlite example)
DATABASE_URL=sqlite:///db.sqlite3

# Mail / SMTP settings (MailHog example)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=security-sandbox@example.com

# JWT secret (if using JWT for API auth)
JWT_SECRET=replace_with_jwt_secret

# Dev mode toggle for exposing dev-only UI
DEV_MODE=True

